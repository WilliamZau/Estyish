<div class="center">
  <h2>Your Sales History</h2>
</div>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th class="center hidden-xs">Image</th>
    <th class="center">Item</th>
    <th class="center hidden-xs">Price</th>
    <th class="center">Customer</th>
    <th class="center">Date Sold</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td class="center hidden-xs"><%= image_tag order.listing.image.url(:thumb) %></td>
      <td class="center"><%= order.listing.name %></td>
      <td class="center hidden-xs"><%= number_to_currency(order.listing.price) %></td>
      <td class="center"><%= order.buyer.name %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
          
    </tr>
    <% end %>
</table>
<br>


<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class:"btn btn-link" %>
  <% end %>
